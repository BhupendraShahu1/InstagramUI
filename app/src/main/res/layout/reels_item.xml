<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize"
        android:background="#80000000">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
            android:text="Reels"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            android:src="@drawable/camra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/reels_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:padding="2dp"
            android:src="@drawable/profile_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/reels_three_dot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="2dp"
            android:src="@drawable/baseline_more_vert_24"
            app:layout_constraintBottom_toTopOf="@+id/reels_profile"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/reels_send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/send"
            android:text="64.8K"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/reels_three_dot"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/reels_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/comment"
            android:text="64.8K"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/reels_send_text"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/reels_likes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:drawableTop="@drawable/heart"
            android:text="64.8K"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/reels_comment_text"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/reels_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_background"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="MusicName.Original audio"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/reels_item_relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/reels_about"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/reels_profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_icon"
                app:shapeAppearanceOverlay="@style/circularImage" />

            <TextView
                android:id="@+id/reels_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/reels_profile_image"
                android:gravity="center"
                android:text="Jai mata di "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/createNewAccount"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/reels_profile_name"
                android:background="@drawable/follow_background"
                android:gravity="center"
                android:text="Follow"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
