<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Instagram" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
    </style>

    <style name="Theme.Instagram" parent="Base.Theme.Instagram">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="circularImage">
        <item name="cornerFamily">rounded
        </item>
        <item name="cornerSize">
            50%
        </item>
    </style>

    <style name="black_icon_background">
        <item name="android:tint">@color/black</item>
    </style>
</resources>